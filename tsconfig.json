{
    "include": [
        "src/**/*.ts"
    ],
    "compilerOptions": {
        "lib": [
            "ES6",
            "ESNext"
        ],
        "baseUrl": "./src/",
        "rootDir": "./src/",
        "outDir": "./dist/",
        "strict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "moduleResolution": "Node",
        "isolatedModules": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "module": "ES2022",
        "target": "ES6",
    }
}